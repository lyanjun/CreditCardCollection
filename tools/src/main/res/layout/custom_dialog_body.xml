<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_date_dialog_background">
    <!-- 标题 -->
    <TextView
        android:id="@+id/custom_mine_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        tools:text="标题"/>
    <!-- 容器 -->
    <!--<LinearLayout-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/custom_mine_dialog_group"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginTop="@dimen/dp_10"-->
        <!--android:layout_marginRight="@dimen/dp_10"-->
        <!--android:layout_marginLeft="@dimen/dp_10"-->
        <!--android:layout_height="wrap_content"/>-->
    <com.lyan.tools.view.InputBox
        android:id="@+id/custom_mine_input_box"
        style="@style/InputBoxSize"
        app:ib_box_line_size="@dimen/dp_20"
        app:ib_input_count="12"
        app:ib_input_text_type="word"
        app:ib_input_text_size="@dimen/sp_16"
        android:layout_gravity="center_horizontal"
        app:ib_input_text_color="@color/black"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"/>
    <!-- 按钮 -->
    <include layout="@layout/custom_dialog_btn"/>
</LinearLayout>