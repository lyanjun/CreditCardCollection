<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 方块输入框的属性 -->
    <declare-styleable name="InputBox">
        <!-- 输入个数 -->
        <attr name="ib_input_count" format="integer"/>
        <!-- 方框的颜色 -->
        <attr name="ib_box_line_color" format="color"/>
        <!-- 方框线的宽度 -->
        <attr name="ib_box_line_width" format="dimension"/>
        <!-- 方框的边长 -->
        <attr name="ib_box_line_size" format="dimension"/>
        <!-- 文字的大小 -->
        <attr name="ib_input_text_size" format="dimension"/>
        <!-- 文字的颜色 -->
        <attr name="ib_input_text_color" format="color"/>
        <!-- 设置输入类型 -->
        <attr name="ib_input_text_type" format="enum">
            <enum name="text" value="0"/>
            <enum name="number" value="1"/>
            <enum name="word" value="2"/>
        </attr>
        <!-- 只能输入字母 -->
        <attr name="ib_input_text_word" format="boolean"/>
    </declare-styleable>
    <!-- 信纸类型的显示文本域 -->
    <declare-styleable name="PaperView">
        <!-- 要显示的文本 -->
        <attr name="pt_show_text" format="string"/>
        <!-- 文字字体大小 -->
        <attr name="pt_show_text_size" format="dimension"/>
        <!-- 文字的字体颜色 -->
        <attr name="pt_show_text_color" format="color"/>
        <!-- 文字的列数 -->
        <attr name="pt_show_text_rows" format="integer"/>
    </declare-styleable>
    <!-- 图文提示控件 -->
    <declare-styleable name="ImageTextHintView">
        <!-- 提示文本 -->
        <attr name="it_hint_text_message" format="string"/>
        <!-- 文字的大小 -->
        <attr name="it_hint_text_color" format="color"/>
        <!-- 文字的颜色 -->
        <attr name="it_hint_text_size" format="dimension"/>
        <!-- 图文之间的间隔 -->
        <attr name="it_hint_interval" format="dimension"/>
        <!-- 图片 -->
        <attr name="it_hint_image_src" format="reference"/>
    </declare-styleable>
</resources>