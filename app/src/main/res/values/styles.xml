<resources>
    <!-- 界面风格 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>
    <!-- 信用卡申请界面Item边距 -->
    <style name="ApplyInfoItemMargin">
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>
    <!-- 信用卡申请界面Body内边距 -->
    <style name="LevelOneApplyInfoBodyPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
    </style>

    <!-- 信用卡申请界面Body内边距 -->
    <style name="LevelApplyInfoBodyPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
    </style>

    <!-- 选线按钮的样式 -->
    <style name="SelectButtonStyle">
        <item name="android:drawableLeft">@drawable/apply_info_selecter</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/dp_90</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_4</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- item标题有边距-->
    <style name="TitleWithMargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- item标题无边距-->
    <style name="TitleWithOutMargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Info输入框 -->
    <style name="BoxEditStyle">
        <item name="android:background">@drawable/apply_input_line_background</item>
        <item name="android:paddingLeft">@dimen/dp_3</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
