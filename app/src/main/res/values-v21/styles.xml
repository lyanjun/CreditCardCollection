<resources>
    <!-- 界面风格 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:colorControlActivated">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
    </style>
    <!-- 添加图片容器的样式 -->
    <style name="ApplyAddImageBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:translationZ">@dimen/dp_2</item>
        <item name="android:background">@drawable/input_image_background</item>
    </style>
</resources>
