                    android:text="负责人/法人"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="高层管理人员"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="中层管理人员"
                    app:layout_columnWeight="1" />

                <RadioButton
