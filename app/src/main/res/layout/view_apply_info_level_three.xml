                    style="@style/SelectButtonStyleNoWidth"
                    android:text="机关·事业单位"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="国有企业"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="独资企业"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="合资·合作单位"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="股份制企业"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="私人企业"
                    app:layout_columnWeight="1" />

                <RadioButton
                    style="@style/SelectButtonStyleNoWidth"
                    android:text="其他"
                    app:layout_columnWeight="1" />
            </android.support.v7.widget.GridLayout>
